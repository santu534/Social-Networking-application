<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/template_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="dp" >

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/p_p_icon"
            android:layout_toRightOf="@+id/back_arrow"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/p_p_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/people_profile_icon"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/prv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/template_detail_header"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/prv_mlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prv_image"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
         >

        <ImageView
            android:id="@+id/pd_mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:gravity="left|center_vertical"
            android:src="@drawable/female_message_box_people_inner" />

        <TextView
            android:id="@+id/pd_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/challeng_btn"
            android:gravity="center|center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:text="@string/challenge"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pd_mfr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/frined_reqest_btn"
            android:gravity="center|center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/mfr"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/prv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/prv_mlayout"
        android:background="@color/gray"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/pd_txts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prv_line"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pd_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pd_ec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>