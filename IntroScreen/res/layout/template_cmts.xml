<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_layout_cmts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/template_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/template_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/play_enabled_videos"
        android:background="@android:color/transparent"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/template_cmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/template_like"
        android:background="@drawable/play_enabled_videos"
        android:contentDescription="@string/app_name"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/template_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/template_like"
        android:layout_toRightOf="@+id/template_icon"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/user_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/template_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/template_icon"
        android:layout_below="@+id/template_user"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/template_like"
        android:layout_toRightOf="@+id/template_icon"                
        android:paddingLeft="10dp"
        android:textColor="#8F8D8D"
        android:textSize="12sp" />

</RelativeLayout>